<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>asd
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="noAnimTheme" parent="android:Theme.Holo.Light.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="button_sheet" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:paddingLeft">@dimen/dimen_10</item>
        <item name="android:paddingRight">@dimen/dimen_10</item>
        <item name="android:minWidth">@dimen/dimen_148</item>
        <item name="android:minHeight">@dimen/dimen_48</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">top|center_horizontal</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    <style name="button_sheet_green" parent="button_sheet">
        <item name="android:background">@drawable/ripple_effect_green</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="button_sheet_green_wide" parent="button_sheet_green">
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="textWhite">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="textWhite_13dp" parent="textWhite">
        <item name="android:textSize">@dimen/dimen_13</item>
    </style>

    <style name="textGrey_52">
        <item name="android:textColor">@color/grey_52</item>
    </style>

    <style name="textGrey_52_14dp_bold" parent="textGrey_52">
        <item name="android:textSize">@dimen/dimen_14</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="textGrey_52_14dp" parent="textGrey_52">
        <item name="android:textSize">@dimen/dimen_14</item>
    </style>


    <style name="button_sheet_grey" parent="button_sheet">
        <item name="android:background">@drawable/ripple_effect_grey</item>
        <item name="android:textColor">@color/grey_6d</item>
    </style>

    <style name="button_sheet_grey_wide" parent="button_sheet_grey">
        <item name="android:layout_width">match_parent</item>
    </style>
    <style name="textGrey_52_16dp" parent="textGrey_52">
        <item name="android:textSize">@dimen/dimen_16</item>
    </style>
    <style name="dialog_sheet_inner_container">
        <item name="android:paddingBottom">@dimen/dimen_12</item>
        <item name="android:paddingLeft">@dimen/dimen_16</item>
        <item name="android:paddingRight">@dimen/dimen_16</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>
</resources>
