<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bottom_sheet_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/header_image_container_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"

            android:gravity="center_vertical"
            android:paddingLeft="@dimen/dimen_6"
            android:paddingTop="@dimen/dimen_6"
            android:paddingRight="@dimen/dimen_12">

            <ImageView
                android:id="@+id/header_image_0"
                android:layout_width="@dimen/dimen_24"
                android:layout_height="@dimen/dimen_24"
                android:scaleType="fitXY"
                android:src="@drawable/common_icon_close_shade" />
        </LinearLayout>
        <TextView
            android:paddingTop="@dimen/dimen_20"
            android:layout_toLeftOf="@+id/dummi"
            android:layout_toRightOf="@+id/header_image_container_0"
            android:id="@+id/dial_header_text"
            style="@style/textGrey_52_16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="@dimen/dimen_5"
            android:maxLines="2"
             />
        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:id="@+id/dummi"
            android:layout_width="@dimen/dimen_44"
            android:layout_height="@dimen/dimen_1"></LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:paddingLeft="@dimen/bs_dialog_outer_padding"
        android:paddingRight="@dimen/bs_dialog_outer_padding"
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal" />

    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_24">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_0"
            style="@style/button_sheet_green_wide"
            android:text="@string/btn_ok" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/button_1"
            style="@style/button_sheet_grey_wide"
            android:layout_marginTop="@dimen/dimen_12"
            android:text="@string/btn_cancel" />
    </LinearLayout>
    <!--</LinearLayout>-->
</LinearLayout>